{
  "name": "appetizer",
  "displayName": "appetizer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "static/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "appetizerConfiguration",
      "description": "User extension",
      "properties": {
        "appetizerConf.general.prefecture": {
          "type": "string",
          "default": "%config.properties.appetizer.prefecture.default%",
          "pattern": "[都道府県]",
          "patternErrorMessage": "%config.properties.appetizer.prefecture.error.message%",
          "description": "%config.properties.appetizer.prefecture.description%"
        },
        "appetizerConf.general.nearStation": {
          "type": "string",
          "default": "%config.properties.appetizer.station.default%",
          "description": "%config.properties.appetizer.station.description%"
        },
        "appetizerConf.general.minPrice": {
          "type": "number",
          "default": 100,
          "minimum": 0,
          "maximum": 30000,
          "description": "%config.properties.appetizer.minPrice.description%"
        },
        "appetizerConf.general.maxPrice": {
          "type": "number",
          "default": 200,
          "minimum": 0,
          "maximum": 30000,
          "description": "%config.properties.appetizer.maxPrice.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/node-schedule": "^1.3.1",
    "@types/vscode": "^1.52.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "copy-webpack-plugin": "^8.1.1",
    "eslint": "^7.15.0",
    "file-loader": "^6.2.0",
    "glob": "^7.1.6",
    "html-loader": "^2.1.2",
    "mocha": "^8.1.3",
    "raw-loader": "^4.0.2",
    "sass": "^1.32.12",
    "sass-loader": "^11.0.1",
    "supports-color": "^8.1.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "url-loader": "^4.1.1",
    "vscode-test": "^1.4.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^9.0.0",
    "node-schedule": "^2.0.0"
  }
}
