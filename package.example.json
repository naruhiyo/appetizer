{
  "name": "appetizer",
  "displayName": "appetizer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "appetizer.helloWorld",
        "title": "Hello World",
        "category": "test"
      },
      {
        "command": "appetizer.showImage",
        "title": "Get and show Image on appetizer",
        "category": "test"
      },
      {
        "command": "appetizer.showCurrentTime",
        "title": "Show current time",
        "category": "test"
      },
      {
        "command": "appetizer.readConfig",
        "title": "Read config",
        "category": "test"
      },
      {
        "command": "appetizer.searchGoogle",
        "title": "Search Test Google",
        "category": "test"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "appetizer.helloWorld",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "appetizer.helloWorld",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "appetizerConfiguration",
      "properties": {
        "appetizerConf.apiKey": {
          "type": "object",
          "default": {
            "hotpepperApiKey": "",
            "googleApiKey": ""
          },
          "description": "API Keys"
        },
        "appetizerConf.general": {
          "type": "object",
          "default": {
            "nearStation": "Sample Station!!",
            "lat": 0,
            "lng": 0,
            "priceRange": [
              0,
              1000
            ],
            "searchStoreRange": 5
          },
          "description": "User extension"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/node-schedule": "^1.3.1",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "file-loader": "^6.2.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "supports-color": "^8.1.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "url-loader": "^4.1.1",
    "vscode-test": "^1.4.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "node-schedule": "^2.0.0"
  }
}
